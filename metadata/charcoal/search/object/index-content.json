    "default_data": {
        "key": "id"
    },
    "sources": {
        "default": {
            "table": "charcoal_search_indexes"
        }
    },
    "default_source": "default",
    "admin": {
        "lists": {
            "default": {
                "properties": [
                    "object_type",
                    "object_id",
                    "slug",
                    "title",
                    "description",
                    "lang"
                ],
                "orders": [
                    {
                        "property": "lang",
                        "mode": "asc"
                    },
                    {
                        "property": "object_type",
                        "mode": "asc"
                    },
                    {
                        "property": "object_id",
                        "mode": "asc"
                    }
                ]
            }
        },
        "default_list": "default",
        "forms": {
            "default": {
                "groups": {
                    "info": {
                        "title": "Contenu",
                        "layout": {
                            "structure": [
                                { "columns": [ 1, 1, 1, 1 ] },
                                { "columns": [ 1 ] }
                            ]
                        },
                        "properties": [
                            "object_id",
                            "object_type",
                            "slug",
                            "lang",
                            "content"
                        ],
                        "priority": 100
                    }
                },
                "sidebars": {
                    "actions": {}
                }
            }
        },
        "default_form": "default",
        "dashboards": {
            "admin.edit": {
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/object-form",
                        "form_ident": "default",
                        "obj_type": "charcoal/search/object/index-content"
                    }
                }
            },
            "admin.table": {
                "widgets": {
                    "table": {
                        "type": "charcoal/admin/widget/table",
                        "collection_ident": "default",
                        "obj_type": "charcoal/search/object/index-content",
                        "priority": 20
                    }
                }
            }
        },
        "default_create_dashboard": "admin.edit",
        "default_edit_dashboard": "admin.edit",
        "default_collection_dashboard": "admin.table"
    }
